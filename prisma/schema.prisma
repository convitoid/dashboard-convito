generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id             Int      @id @default(autoincrement())
  client_id      String   @unique
  client_name    String
  event_date     DateTime
  location_type  String
  event_location String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdBy      String
  updatedBy      String
}
